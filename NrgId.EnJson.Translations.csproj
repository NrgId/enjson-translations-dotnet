<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RootNamespace>NrgId.EnJson.Translations</RootNamespace>
    <AssemblyName>NrgId.EnJson.Translations</AssemblyName>

    <PackageId>NrgId.EnJson.Translations</PackageId>
    <Version>1.0.0</Version>
    <Authors>NrgId</Authors>
    <Company>NrgId</Company>
    <Description>Translation provider and DI extensions for loading translations from enjson.com (NrgId platform).</Description>
    <PackageProjectUrl>https://github.com/NrgId/enjson-translations-dotnet</PackageProjectUrl>
    <RepositoryUrl>https://github.com/NrgId/enjson-translations-dotnet</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>nrgid;enjson;translations;localization;tms;i18n</PackageTags>
    <PackageLicenseExpression>LicenseRef-Proprietary</PackageLicenseExpression>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
    <None Include="LICENSE.txt" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="5.0.0" />
    <PackageReference Include="System.Net.Http.Json" Version="5.0.0" />
  </ItemGroup>
</Project>
